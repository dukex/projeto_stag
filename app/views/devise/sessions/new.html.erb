<!--Tela login-->
<div class="login-form">
  <label class="std-font-grey" style="font-size:20px; text-align:center">Fa√ßa seu login</label>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <!--E-mail-->
  <div class="field">
    <%= f.label :email, value: "E-mail", :class => "std-font-grey"%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control"%>
  </div>
  <!--Senha-->
  <div class="field">
    <%= f.label :password, value: "Senha", :class => "std-font-grey "%>
    <%= f.password_field :password, autocomplete: "current-password", :class => "form-control" %>
  </div>
  <!--Manter conectado-->
  <% if devise_mapping.rememberable? %>
  <div class="field" style="margin:20px">
    <%= f.check_box :remember_me, :class => "form-check-input"%>
    <%= f.label :remember_me, value: "Mantenha-me conectado", :class => "std-font-grey-sm"%>
  </div>
  <% end %>
  </br>
  <div class="actions container">
    <div class="row">
      <div class="col">
        <!--Cancelar-->
        <button type="button" id="clear" class="btn btn-link std-link"> Cancelar </button>
      </div>
      <div class="col">
        <!--Entrar-->
        <%= f.submit "Entrar", :class => "std-btn"%>
      </div>
    </div>
  </div>
  <% end %>
  <!--Primeiro acesso, Esqueci a senha-->
  <%= render "devise/shared/links" %>
</div>
<!--Limpa login-->
<script>
  $(document).ready(function () {
    $('#clear').click(function () {
      $('#user_email').val('');
      $('#user_password').val('');
    })
  })
</script>