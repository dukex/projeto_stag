<script>
  //Altera estilo collapse

  //Collapse 1
  $('#collapseExample_1').on('shown.bs.collapse', function () {
    //Collapse aberto
    $('#atualiza-pessoal').attr('style', 'color: #623f99ff;');
    $('#arrow-down1').hide();
    $('#arrow-up1').show();
