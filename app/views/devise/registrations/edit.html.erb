  $('#collapseExample_1').on('hidden.bs.collapse', function () {
    //Collapse fechado
    $('#atualiza-pessoal').attr('style', 'color: #586871;');
    $('#arrow-up1').hide();
    $('#arrow-down1').show();
  });

  //Collapse 2
  $('#collapseExample_2').on('shown.bs.collapse', function () {
    //Collapse aberto
    $('#atualiza-endereco').attr('style', 'color: #623f99ff;');
    $('#arrow-down2').hide();
    $('#arrow-up2').show();
    $('#arrow-up2').removeAttr('hidden');
