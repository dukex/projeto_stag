<script>
  //Click em editar
  $('#btn-edit').click(function (e) {
    e.preventDefault();

    if ($('i').is(":visible")) {
      $('#myModal').modal({ show: true });
    }
    else {  
      if ($('#error_explanation').length >= 1) {
        $('#errorModal').modal({ show: true });
        var message_error = $('#error_explanation').find('li').text();
        // if (message_error == "Current password can't be blank") {
        //   message_error = "Confirme sua senha atual antes de salvar";
        // }
        // if (message_error == "Current password is invalid") {
        //   message_error = "Senha atual inválida";
        // }
        $("#errorAlert").html(message_error);
      }
      else {
        document.getElementById('edit_user').submit();  
      }
    }
  });
  
  //Click em deletar
  $("#btnDelete").click(function () {
    $("#modalDeletar").modal({ show: true });
  });

  //Altera cor do link do collapse
  var collapseOpen1 = false;
  var collapseOpen2 = false;
  var collapseOpen3 = false;
  var collapseOpen4 = false;

  //Collapse 1
  function changeLinkColor1() {
    if (collapseOpen1) {
      $('#atualiza-pessoal').attr('class', 'std-font-grey-md');
      $('#bg-collapse1').attr('class', 'container bg-light-yellow');
      collapseOpen1 = false;
    }
    else {
      $('#atualiza-pessoal').attr('class', 'std-font-yellow-md');
      $('#bg-collapse1').attr('class', 'container bg-light-yellow-static');
      collapseOpen1 = true;
    }
  }
  //Collapse 2
  function changeLinkColor2() {
