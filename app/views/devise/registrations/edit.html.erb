      $('#bg-collapse2').attr('class', 'container bg-light-yellow-static');
      collapseOpen2 = true;
    }
  }
  //Collapse 3
  function changeLinkColor3() {
    if (collapseOpen3) {
      $('#atualiza-email').attr('class', 'std-font-grey-md');
      $('#bg-collapse3').attr('class', 'container bg-light-yellow');
      collapseOpen3 = false;
    }
    else {
      $('#atualiza-email').attr('class', 'std-font-yellow-md');
      $('#bg-collapse3').attr('class', 'container bg-light-yellow-static');
