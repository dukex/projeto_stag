        </div>
        <div class="col-md-auto" style="margin-top: 5px">
          <%= f.select :estado, states, :class => "form-control-yellow form-control", :placeholder => "estado", :dataid => "7"%>
        </div>
      </div>
      <!--Menu continuar-->
      </br></br>
      <div class="actions container" style="max-width: 350px">
        <div class="row justify-content-center">
          <div class="col">
            <a class="btn btn-link esp-link" id="btnBack">Voltar</a>
          </div>
          <div class="col"></div>
          <button class="std-btn" id="btnNext"> Continuar </button>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<div id="myModal" class="modal fade rounded mr-2" tabindex="-1" role="alert">
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="color: blueviolet;">
      <div class="modal-header">
        <p class="modal-title std-font-grey">CEP inválido</p>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>

<!-- cadastro do e-mail e senha -->

<div class="container cad-form" style="width: max-content;">
    <label class="std-font-grey-md" style="font-size:20px; text-align:center">Vamos manter sua conta segura</label>
    <div class="card card-grey">
      <div class="card-body">
        <div class="row align-items-center" style="padding-left: 0px">
          <div class="col-4">
            <p class="std-font-grey"></p>
          </div>
        </div>
        <!-- início do preenchimento do e-mail -->
        <div class="row align-items-center justify-content-center">
          <div class="col-4" align="right" style="margin-top: 10px">
            <p class="std-font-grey-md" >O e-mail é</p>
          </div>
          <div class="col">                                                                                                                                            
            <div class="form-group">
              <%= f.email_field :email, :class => "form-control-yellow form-control", :placeholder => "exemplo@gmail.com" %><br />
            </div>
          </div>
            <!-- Confirmar e-mail -->
        </div>
        <div class="row align-items-center justify-content-center">
          <div class="col-4" align="right">
            <p class="std-font-grey-md" >Confirme o seu e-mail</p>
          </div>
          <div class="col">
            <div class="form-group">
            <%= f.email_field :email, :class => "form-control-yellow form-control", :placeholder => "exemplo@gmail.com" %><br />
            </div>
          </div>
        </div>
        <!-- Digitar a sua senha -->
        <div class="row align-items-center justify-content-center">
          <div class="col-4" align="right"style="padding-right: 0px">
            <p class="std-font-grey-md" >Qual vai ser sua senha?</p>
          </div>
          <div class="col">
            <div class="form-group">
              <%= f.password_field :password, :class => "form-control-yellow form-control", :placeholder => "Senha" %><br />
            </div>
          </div>
        </div>
        <!-- Confirmar a sua senha -->
        <div class="row align-items-center" >
