              <p class="std-font-grey-md" >Repita, por favor</p>
            </div>
            <div class="col">
              <div class="form-group">
                <%= f.password_field :password_confirmation, :class => "form-control-yellow form-control", :placeholder => "Senha" %><br />
              </div>
            </div>
          </div>
          
          <div class="col">
              <!--Cadastrar-->
              <%= f.submit "Cadastrar", :class => "std-btn"%>
            </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
