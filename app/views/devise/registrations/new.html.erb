        </div>
      </div>
      <!--Complemento-->
      <div class="row justify-content-md-center">
        <div class="col-md-auto">
          <label class="std-font-grey-md" style="margin-top: 15px">complemento</label>
        </div>
        <div class="col-md-auto">
          <%= f.text_field :complemento, :class => "form-control-yellow form-control", :placeholder => "casa, apto.", :dataid => "4"%>
        </div>
      </div>
      <!--Bairro, cidade-->
      <div class="row justify-content-md-center">
        <div class="col-md-auto">
          <label class="std-font-grey-md" style="margin-top: 15px">bairro</label>
        </div>
        <div class="col-md-auto">
          <%= f.text_field :bairro, :class => "form-control-yellow form-control", :placeholder => "bairro", :dataid => "5"%>
        </div>
        <div class="col-md-auto">
          <label class="std-font-grey-md" style="margin-top: 15px">em</label>
        </div>
        <div class="col-md-auto">
          <%= f.text_field :cidade, :class => "form-control-yellow form-control", :placeholder => "cidade", :dataid => "6"%>
        </div>
      </div>
