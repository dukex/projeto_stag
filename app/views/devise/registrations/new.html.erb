        <div class="col-md-auto">
          <label class="std-font-grey-md" style="margin-top: 15px">Na</label>
        </div>
        <div class="col-md-auto">
          <%= f.text_field :logradouro, :class => "form-control-yellow form-control", :placeholder => "rua, avenida", :dataid => "2"%>
        </div>
