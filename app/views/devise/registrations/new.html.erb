<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<div class="progress" style="height: 5px; position: fixed; top: 60px; z-index: 2; width: 100%;">
  <div class="progress-bar" role="progressbar" style="width: 33%; background-color: #f6af42ff;" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<div class="container">
  <!--Tela casdastro PF PJ-->
  <div id="cadastro1" class="container" style="max-width: 750px; padding: 25px;">
    <label class="std-font-grey" style="font-size:20px; text-align:center">Conte um pouco sobre vc ;)</label>
    <div class="card card-grey">
      <div class="card-body">
        <div class="row align-items-center justify-content-center">
          <div class="col-4" align="right">
            <label class="std-font-grey-md" style="margin-top: 5px;">Sou</label>
          </div>
          <div class="col-8">
            <div class="form-group">
              <%= f.select :pf_pj, pfpj, :class => "form-control", autofocus: true  %>
            </div>
          </div>
        </div>
        <!--Pessoa física-->
        <div id="pf">
          <div class="row align-items-center justify-content-center">
            <div class="col-4" align="right">
              <label class="std-font-grey-md" style="margin-top: 5px;">Meu nome é</label>
            </div>
            <div class="col-4">
              <div class="form-group">
                <%= f.text_field :nome, autofocus: true, :class => "form-control-yellow form-control", :placeholder => "Nome", :dataid => "1"%>
              </div>
            </div>
            <div class="col-4">
              <div class="form-group">
                <%= f.text_field :sobrenome, :class => "form-control-yellow form-control", :placeholder => "Sobrenome", :dataid => "2"%>
              </div>
            </div>
          </div>
          <div class="row align-items-center justify-content-center">
            <div class="col-4" align="right">
              <label class="std-font-grey-md" style="margin-top: 5px;">Meu CPF é</label>
            </div>
            <div class="col-8">
              <div class="form-group">
                <%= f.text_field :cpf, :class => "form-control-yellow form-control", :placeholder => "CPF", :maxlength => "14", :dataid => "3"%>
              </div>
            </div>
          </div>
          <div class="row align-items-center justify-content-center">
            <div class="col-4" align="right">
              <label class="std-font-grey-md" style="margin-top: 5px;">Documento Pessoal</label>
            </div>
            <div class="col-4">
              <div class="form-group">
                <%= f.text_field :documento, :class => "form-control-yellow form-control", :placeholder => "Ex: RG", :dataid => "4", :type => "number" %>
              </div>
            </div>
            <div class="col-4">
              <div class="form-group">
                <%= f.text_field :orgao_emissor, :class => "form-control-yellow form-control", :placeholder => "Órgão Emissor", :dataid => "5"%>
              </div>
            </div>
          </div>
          <div class="row align-items-center justify-content-center">
            <div class="col-4" align="right">
              <label class="std-font-grey-md" style="margin-top: 5px;">UF e Data de Emissão</label>
            </div>
            <div class="col-4">
              <div class="form-group">
                <%= f.select :estado_emissor, states%>
              </div>
            </div>
            <div class="col-4">
              <div class="form-group">
                <%= f.date_field :data_emissao, :class => "form-control"%>
              </div>
            </div>
          </div>
        </div>
        <!--Pessoa jurídica-->
        <div id="pj">
          <div class="row align-items-center justify-content-center">
            <div class="col-4" align="right">
              <label class="std-font-grey-md" style="margin-top: 5px;">Nome Fantasia</label>
            </div>
            <div class="col">
              <div class="form-group">
                <%= f.text_field :nome_fantasia, :class => "form-control-yellow form-control", :placeholder => "Nome", :dataid => "1"%>
              </div>
            </div>
          </div>
          <div class="row align-items-center justify-content-center">
            <div class="col-4" align="right">
              <label class="std-font-grey-md" style="margin-top: 5px;">Razão Social</label>
            </div>
            <div class="col">
              <div class="form-group">
                <%= f.text_field :razao_social, :class => "form-control-yellow form-control", :placeholder => "Razão Social", :dataid => "2"%>
              </div>
            </div>
          </div>
          <div class="row align-items-center justify-content-center">
            <div class="col-4" align="right">
              <label class="std-font-grey-md" style="margin-top: 5px;">Com CNPJ</label>
            </div>
            <div class="col">
              <div class="form-group">
                <%= f.text_field :cnpj, :class => "form-control-yellow form-control", :placeholder => "CNPJ", :dataid => "3"%>
              </div>
            </div>
          </div>
        </div>
        <!--Menu continuar-->
        </br></br>
        <div class="container" style="max-width: 350px">
          <div class="row justify-content-center">
            <button class="std-btn" id="btnNext" type="button"> Continuar </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!--Tela cadastro endereço-->
<div id="cadastro2" class="container" style="max-width: 750px; padding: 25px" hidden>
  <label class="std-font-grey" style="font-size:20px; text-align:center">Fale sobre o seu endereço</label>
  <div class="card card-grey">
    <div class="card-body">
      <!--CEP-->
