<div class="container-fluid">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Login</th>
                <th scope="col">Nome</th>
                <th scope="col">Sobrenome</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |u| %>
            <tr>
                <th scope="row"><%= u.id %></th>
                <td><%= u.email%></td>
                <td><%= u.nome%></td>
                <td><%= u.sobrenome %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>